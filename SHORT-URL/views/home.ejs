<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ejs Server Side Rendering</title>
  </head>
  <body>
    <h1>
      <%if (locals.id){%>
      <p>Generated URL :<i> https://localhost:5000/url/<%= id %></i></p>
      <% } %>
    </h1>
    <H1> Url Shortner </H1>
    <div>
      <form method="POST" action="/url">
        <label>Enter Your Original Url</label>
        <input type="text" name="url" placeholder="https://example.com" /><br />
        <button type="submit">GENERATE THE URL</button>
      </form>
    </div>
    <div>
      <% if (locals.urls) {%>
      <table>
        <thead>
          <th>Sr No.</th>
          <th>Shortner id</th>
          <th>Redired</th>
          <th>TOtal Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitedHistory.length %></td>
          </tr>

          <% }); %>
        </tbody>
      </table>

      <% } %>
    </div>
  </body>
</html>
